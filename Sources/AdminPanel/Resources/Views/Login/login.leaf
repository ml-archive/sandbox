<!doctype html>
<html>
    <head>
        <title>Sandbox</title>
        <link rel="stylesheet" media="screen" href="/css/app.css">
    </head>
    <body>
        <script src="/js/all.js"></script>
    </body>
</html>

<a href="/admin" id="alternative-login" class="sso">
    <span class="sr-only">Nodes SSO</span>
</a>



<div class="layout vertical fit page-login">
    <div id="login" class="panel panel-default">
        <div class="panel-body">
            
            <div class="panel-heading">
                <div class="logo">
                    #embed("Layout/Elements/logo")
                </div>
                <h3 class="panel-title margin-bottom">Login</h3>
            </div>
            #embed("Layout/Elements/alerts")
            <form method="post" action="/admin/login">
                <div class="form-group action-wrapper">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" class="form-control" name="email" required placeholder="Insert email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" name="password" required placeholder="Insert password">
                </div>


                <!--
                <div class="form-group clearfix">
                    <div class="checkbox pull-left">
                        <label for="nodes-login-remember">
                            <input type="checkbox" id="nodes-login-remember" class="form-control" name="remember" >
                                Remember me
                                </label>
                    </div>
                    <div class="pull-right">
                        <a href="/admin/login/reset">Forgot password?</a>
                    </div>
                </div>
                -->
                <div class="form-group">
                    <input type="submit" class="btn btn-primary form-control" value="Login">
                </div>
            </form>
        </div>
    </div>
</div>

